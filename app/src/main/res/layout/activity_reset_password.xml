<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <include
        android:id="@+id/forget_password_toolbar"
        layout="@layout/app_bar_layout" ></include>

    <TextView
        android:id="@+id/textReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/forget_password_toolbar"
        android:layout_marginTop="132dp"
        android:textAlignment="center"
        android:text="We will make hz" />

    <EditText
        android:id="@+id/reset_password_email"
        android:layout_width="302dp"
        android:layout_height="48dp"
        android:layout_below="@+id/textReset"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/inputs"
        android:hint="email" />

    <Button
        android:id="@+id/reset_password_email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="send"
        android:layout_below="@+id/reset_password_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />



</RelativeLayout>